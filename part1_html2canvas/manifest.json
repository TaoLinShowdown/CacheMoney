{
    "name": "CacheMoney",
    "version": "1.0",
    "description": "Tabnabbing detecting by team CacheMoney",
    "permissions": ["tabs", "<all_urls>", "activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["screenshot.js"],
            "run_at": "document_idle"
        }
    ],
    "manifest_version": 2
}